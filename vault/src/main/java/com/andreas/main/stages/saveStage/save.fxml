<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="800.0" stylesheets="@../../../../../stylesheets/stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andreas.main.stages.saveStage.SaveController">
   <left>
      <VBox prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#addRegister" styleClass="secondary-button" text="Add register" />
            <ListView fx:id="registers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#registersPressed" VBox.vgrow="ALWAYS">
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#addRegister" text="New register... (Ctrl + C)" />
                      <MenuItem mnemonicParsing="false" onAction="#renameRegister" text="Rename register... (Ctrl + R)" />
                      <MenuItem mnemonicParsing="false" onAction="#deleteRegister" text="Delete register... (Ctrl + D)" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               </ListView>
         </children>
      </VBox>
   </left>
   <center>
      <VBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="49.0" prefWidth="600.0">
               <children>
                  <Label fx:id="registerName" text="No register selected">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#lockSavePressed" text="Lock Save">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#saveData" text="Save changes">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="savedState" text="Saved" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TextArea fx:id="registerContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#keyTyped" promptText="Enter important data here:" wrapText="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
            </TextArea>
         </children>
      </VBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#addRegister" text="New register... (Ctrl + C)" />
                  <MenuItem mnemonicParsing="false" onAction="#renameRegister" text="Rename Register... (Ctrl + R)" />
                  <MenuItem mnemonicParsing="false" onAction="#renameRegister" text="Delete Register... (Ctrl + D)" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Create backup... (Ctrl + B)" />
                  <MenuItem mnemonicParsing="false" text="Load backup... (Ctrl + L)" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <Menu mnemonicParsing="false" text="Import / Export">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Import Register (Ctrl + I)" />
                        <MenuItem mnemonicParsing="false" text="Export Register (Ctrl + E)" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
                  <MenuItem mnemonicParsing="false" text="Languages..." />
                  <MenuItem mnemonicParsing="false" text="Themes..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="Delete Save" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
                  <MenuItem mnemonicParsing="false" text="Watch video" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
